<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor">

        <EditText
            android:id="@+id/editTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/drakGray"
            android:ems="10"
            android:hint="제목"
            android:inputType="text"
            android:paddingBottom="20dp"
            android:textColorHint="@color/drakGray"
            android:textSize="22dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_search_box"
            android:layout_width="345dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_rounded_corner_rectangle"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/ic_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18.91dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_search_box"
            app:layout_constraintEnd_toEndOf="@+id/iv_search_box"
            app:layout_constraintTop_toTopOf="@+id/iv_search_box"
            app:srcCompat="@drawable/ic_baseline_search_24" />

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="28dp"
            android:layout_marginLeft="76dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/iv_search_box"
            app:layout_constraintStart_toStartOf="@+id/iv_search_box"
            app:layout_constraintTop_toTopOf="@+id/iv_search_box" />

        <EditText
            android:id="@+id/editTextPlaceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="장소명을 입력하세요."
            android:textColorHint="@color/gray"
            android:inputType="text"
            android:textSize="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="96.49dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="17dp"
            android:background="@null"
            app:layout_constraintBottom_toBottomOf="@+id/iv_search_box"
            app:layout_constraintEnd_toStartOf="@+id/ic_search"
            app:layout_constraintStart_toEndOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/iv_search_box" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>