<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_hot_traveller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_hot_traveller"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hot_traveller_background2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_hot_traveller_profile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="16dp"
                android:background="@drawable/profile_image_sample"
                app:layout_constraintStart_toStartOf="@+id/iv_hot_traveller"
                app:layout_constraintTop_toTopOf="@+id/iv_hot_traveller" />

            <TextView
                android:id="@+id/tv_hot_traveller_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="nickname"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_hot_traveller_profile"
                app:layout_constraintTop_toTopOf="@+id/iv_hot_traveller_profile" />

            <TextView
                android:id="@+id/tv_hot_traveller_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="description"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/tv_hot_traveller_nickname"
                app:layout_constraintTop_toBottomOf="@+id/tv_hot_traveller_nickname" />

            <ImageView
                android:id="@+id/iv_hot_traveller_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_category_activity"
                app:layout_constraintBottom_toTopOf="@+id/tv_hot_traveller_title"
                app:layout_constraintStart_toStartOf="@+id/tv_hot_traveller_subtitle" />

            <TextView
                android:id="@+id/tv_hot_traveller_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_hot_traveller_subtitle"
                app:layout_constraintStart_toStartOf="@+id/tv_hot_traveller_subtitle" />

            <TextView
                android:id="@+id/tv_hot_traveller_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="subtitle"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_hot_traveller"
                app:layout_constraintStart_toStartOf="@+id/iv_hot_traveller" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>