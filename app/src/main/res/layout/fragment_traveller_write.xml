<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_background"
            app:srcCompat="@drawable/ic_calendar" />

        <TextView
            android:id="@+id/tv_add_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="여행 일정 추가"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_calendar"
            app:layout_constraintStart_toEndOf="@+id/iv_calendar" />

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="460dp"
            android:background="@drawable/card_img_example"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginTop="360dp"
            android:layout_marginStart="16dp"
            android:hint="제목을 입력해주세요"
            android:textColorHint="@color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginTop="10dp"
            android:hint="부제목을 입력해주세요"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/editTextTitle"
            app:layout_constraintTop_toBottomOf="@+id/editTextTitle" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/body_image"
            android:layout_width="match_parent"
            android:layout_height="328dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:background="@color/gray03"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_add_schedule"/>


        <!--
        <ImageView
            android:id="@+id/iv_body"
            android:layout_width="match_parent"
            android:layout_height="379dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:background="@color/gray03"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_add_schedule" />
            -->


        <ImageView
            android:id="@+id/iv_photo_unselected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_photo_unselected"
            app:layout_constraintBottom_toBottomOf="@+id/body_image"
            app:layout_constraintEnd_toEndOf="@+id/body_image"
            app:layout_constraintStart_toStartOf="@+id/body_image"
            app:layout_constraintTop_toTopOf="@+id/body_image"
            app:layout_constraintVertical_bias="0.4" />

        <ImageButton
            android:id="@+id/buttonPhotoUnselected"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            app:layout_constraintBottom_toBottomOf="@+id/body_image"
            app:layout_constraintEnd_toEndOf="@+id/body_image"
            app:layout_constraintStart_toStartOf="@+id/body_image"
            app:layout_constraintTop_toTopOf="@+id/body_image"
            app:layout_constraintVertical_bias="0.4" />

        <TextView
            android:id="@+id/tv_photo_unselected1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="클릭 시 사진이 추가됩니다."
            android:textSize="14sp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/buttonPhotoUnselected"
            app:layout_constraintStart_toStartOf="@+id/buttonPhotoUnselected"
            app:layout_constraintTop_toBottomOf="@+id/buttonPhotoUnselected" />

        <TextView
            android:id="@+id/tv_photo_unselected2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(사진을 추가하지 않아도 글 입력이 가능해요!)"
            android:textSize="10sp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/tv_photo_unselected1"
            app:layout_constraintStart_toStartOf="@+id/tv_photo_unselected1"
            app:layout_constraintTop_toBottomOf="@+id/tv_photo_unselected1" />

        <EditText
            android:id="@+id/editTextBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="본문을 입력해 주세요."
            android:textColorHint="@color/gray"
            android:textSize="14sp"
            android:background="@null"
            android:ems="10"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="@+id/body_image"
            app:layout_constraintStart_toStartOf="@+id/body_image"
            app:layout_constraintTop_toBottomOf="@+id/body_image" />

        <ImageButton
            android:id="@+id/buttonBackgroundPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_background_photo_add"
            app:layout_constraintEnd_toEndOf="@+id/iv_background"
            app:layout_constraintTop_toTopOf="@+id/iv_background" />

        <ImageButton
            android:id="@+id/buttonBodyPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:background="@drawable/ic_body_write_add"
            app:layout_constraintEnd_toEndOf="@+id/editTextBody"
            app:layout_constraintStart_toStartOf="@+id/editTextBody"
            app:layout_constraintTop_toBottomOf="@+id/editTextBody" />

        <TextView
            android:id="@+id/tv_body_add1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="글을 추가로 작성하고 싶다면,"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/buttonBodyPhoto"
            app:layout_constraintStart_toStartOf="@+id/buttonBodyPhoto"
            app:layout_constraintTop_toBottomOf="@+id/buttonBodyPhoto" />

        <TextView
            android:id="@+id/tv_body_add2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:text="추가 버튼을 눌러주세요."
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_body_add1"
            app:layout_constraintStart_toStartOf="@+id/tv_body_add1"
            app:layout_constraintTop_toBottomOf="@+id/tv_body_add1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>