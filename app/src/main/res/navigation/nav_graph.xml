<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/trailerFragment"
        android:name="com.android.example.travalue.ui.trailer.TrailerFragment"
        android:label="TrailerFragment" >
        <action
            android:id="@+id/action_trailerFragment_to_categoryFragment"
            app:destination="@id/categoryFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left" />
    </fragment>
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.android.example.travalue.info.CategoryFragment"
        android:label="categoryFragment" >
        <action
            android:id="@+id/action_categoryFragment_to_trailerFragment"
            app:destination="@id/trailerFragment"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_categoryFragment_to_travellerFragment"
            app:destination="@id/travellerFragment"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/travellerFragment"
        android:name="com.android.example.travalue.ui.traveller.TravellerFragment"
        android:label="TravellerFragment" >
        <action
            android:id="@+id/action_travellerFragment_to_categoryFragment"
            app:destination="@id/categoryFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.android.example.travalue.info.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.android.example.travalue.info.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_trailerFragment"
            app:destination="@id/trailerFragment" />
        <action
            android:id="@+id/action_registerFragment_to_registerOkFragment"
            app:destination="@id/registerOkFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerOkFragment"
        android:name="com.android.example.travalue.info.RegisterOkFragment"
        android:label="RegisterOkFragment" >
        <action
            android:id="@+id/action_registerOkFragment_to_trailerFragment"
            app:destination="@id/trailerFragment" />
    </fragment>

</navigation>